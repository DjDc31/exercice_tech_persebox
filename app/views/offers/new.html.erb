<div class="row">
<div class="col-md-6">
  <div class="product-image">
    <%# <%= image_tag @product.images.first.url(resize_to_limit: [140, 75]), alt: @product.modele %> %>
  </div>
</div>

  <div class="col-md-6">
    <%= form_for @offer do |f| %>

  <div class="form-group">
    <%= f.label :price, "Prix" %>
    <%= f.number_field :price, min: 0, max: 999, step: 0.5, value: 0, class: "form-control" %>
    <%= f.label :price, "€" %>
  </div>
  <div class="form-group">
    <%= f.label :extra, "Option supplémentaire" %>
    <%= f.check_box :extra %>
  </div>
  <div class="form-group">
    <%= f.label :content, "Description" %>
    <%= f.text_area :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :language, "Langue" %>
    <%= f.select :language, options_for_select(Offer.language_options), {}, { class: "form-control" } %>
  </div>
<div class="form-group">
  <%= f.label :etat, "État du produit" %>
  <%= f.select :etat, Offer.formatted_etat_options, {}, { class: "form-control" } %>
</div>
  <%= f.submit "Ajouter l'offre", class: "btn btn-primary" %>
<% end %>
