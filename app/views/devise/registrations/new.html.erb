<h2 class="login-heading">Inscription</h2>
<div class="login-container">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
    <%= f.error_notification %>

    <div class="row">
      <!-- Left Column for email and password -->
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <div class="form-inputs">
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "email" },
                          label: 'Email',
                          label_html: { class: "form-label" },
                          wrapper_html: { class: "form-field" } %>
              <%= f.input :password,
                          required: true,
                          hint: ("Minimum #{@minimum_password_length} caractères" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" },
                          label: 'Mot de passe',
                          label_html: { class: "form-label" },
                          wrapper_html: { class: "form-field" } %>
              <%= f.input :password_confirmation,
                          required: true,
                          input_html: { autocomplete: "new-password" },
                          label: 'Confirmation du mot de passe',
                          label_html: { class: "form-label" },
                          wrapper_html: { class: "form-field" } %>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column for the rest of the information -->
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <div class="form-inputs">
              <%= f.input :nickname,
                          required: true,
                          label: 'Pseudo',
                          label_html: { class: "form-label" },
                          wrapper_html: { class: "form-field" } %>
              <%= f.input :first_name,
                          required: true,
                          label: 'Prénom',
                          label_html: { class: "form-label" },
                          wrapper_html: { class: "form-field" } %>
              <%= f.input :last_name,
                          required: true,
                          label: 'Nom',
                          label_html: { class: "form-label" },
                          wrapper_html: { class: "form-field" } %>
              <%= f.input :address,
                          required: true,
                          label: 'Adresse',
                          label_html: { class: "form-label" },
                          wrapper_html: { class: "form-field" } %>
              <%= f.input :date_birth,
                          required: true,
                          as: :date,
                          start_year: Date.today.year - 100,
                          end_year: Date.today.year - 12,
                          label: 'Date de naissance',
                          label_html: { class: "form-label" },
                          wrapper_html: { class: "form-field" } %>
              <%= f.input :description,
                          required: false,
                          label: 'Description',
                          label_html: { class: "form-label" },
                          wrapper_html: { class: "form-field" } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "S'inscrire", class: "btn btn-primary" %> <br>
      <br>
      <p>Tu as déjà un compte ? <%= link_to 'Se connecter', new_user_session_path, class:"btn btn-primary" %></p>

    </div>
  <% end %>
</div>
