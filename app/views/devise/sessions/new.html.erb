<h2 class="login-heading">Connexion</h2>
<div class="login-container">

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  label: "Adresse email",
                  label_html: { class: "form-label" },
                  wrapper_html: { class: "form-field" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  label: "Mot de passe",
                  label_html: { class: "form-label" },
                  wrapper_html: { class: "form-field" } %>
      <%= f.input :remember_me, as: :boolean, wrapper_html: { class: "form-field" },
                  label: "Se souvenir de moi",
                  label_html: { class: "form-label-checkbox" } if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Se connecter", class: "btn btn-primary" %>
    </div>
    <%= render "devise/shared/links" %>

  <% end %>
</div>
