<div class="product-card" data-controller="like">
  <div class="product-image">
        <a href="<%= product_path(product) %>" class="product-link">

    <%= image_tag product.images.first.url(resize_to_limit: [140, 75]), alt: product.modele if product.images.attached? %>

    </a>

    <%= render 'shared/like_button', product: product %>
    <%= render 'shared/unlike_button', product: product %>
    </div>
    <a href="<%= product_path(product) %>" class="product-link">

    <div class="product-details">
      <div class="p-home">
        <p class="product-model"><strong><%= product.modele %></strong></p>
      </div>
      <p class="product-brand"><%= product.marque %></p>
      <div class="product-offer">
        <% if product.offers.any? %>
          <p class="lowest-price-label">Offre la plus basse</p>
          <p class="lowest-price"><%= product.offers.first.price %> â‚¬</p>
        <% end %>
      </div>
      <div class="product-last-sale" style="background-color: #f5f5f5; padding: 2px; border-radius: 2px">
        <span class="last-sale-label">Nombre d'offres :</span>
        <span class="last-sale-price"><%= product.offers.count %></span>
      </div>
    </div>
  </div>
</a>
