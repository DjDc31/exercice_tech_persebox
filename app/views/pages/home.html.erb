<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="carousel-wrapper">
        <div id="carouselExampleControls" class="carousel slide custom-carousel" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="https://images.unsplash.com/photo-1524439188326-e47322d1cef2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2340&q=80" class="d-block w-100" alt="first slide">
            </div>
            <div class="carousel-item">
              <img src="https://images.unsplash.com/photo-1573875133384-07fe039214a4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1480&q=80" class="d-block w-100" alt="second slide">
            </div>
            <div class="carousel-item">
              <img src="https://images.unsplash.com/photo-1580848426261-43c8aeab32ac?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1974&q=80" class="d-block w-100" alt="third slide">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <h2 class="title-home">Sélectionnés pour vous</h2>
      <ul class="product-cards-home">
        <% @random_products.take(6).each do |product| %>
          <li class="product-card-item-home">
            <%= render partial: 'shared/card', locals: { product: product } %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <h2 class="title-home">Marques en tendance</h2>
      <div class="marques-div">
        <div class="card-marques">
          <%= image_tag("lv-boite.jpg", class: "card-img-top", alt: "Image de la marque Louis Vuitton") %>
          <div class="card-body-marques">
            <h5 class="card-title">Louis Vuitton</h5>
          </div>
        </div>
        <div class="card-marques">
          <%= image_tag("adidas.jpg", class: "card-img-top", alt: "Image de la marque Adidas") %>
          <div class="card-body-marques">
            <h5 class="card-title">Adidas</h5>
          </div>
        </div>
        <div class="card-marques">
      <%= image_tag("apple.jpg", class: "card-img-top", alt: "Image de la marque Apple") %>
          <div class="card-body-marques">
      <h5 class="card-title">Apple</h5>
          </div>
        </div>
        <div class="card-marques">
      <%= image_tag("chanel.jpg", class: "card-img-top", alt: "Image de la marque Chanel") %>
          <div class="card-body-marques">
      <h5 class="card-title">Chanel</h5>
          </div>
        </div>
        <div class="card-marques">
      <%= image_tag("nike.jpg", class: "card-img-top", alt: "Image de la marque Nike") %>
          <div class="card-body-marques">
      <h5 class="card-title">Nike</h5>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <div class="title-home-fav">
        <div class="fav-tit">
          <h2 class="title-home">Les favoris</h2>
        </div>
        <div class="pop-up-fav">
          <span class="popup" data-popuptext="Produits les plus mis en favoris!"><i class="fa-solid fa-circle-exclamation hover-icon" style="color: #7a7a7a;"></i></span>
        </div>
      </div>
      <ul class="product-cards-home">
        <% @random_products.take(6).each do |product| %>
          <li class="product-card-item-home">
            <%= render partial: 'shared/card', locals: { product: product } %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
          <h2 class="title-home">Articles de collection</h2>
      <ul class="product-cards-home">
        <% @random_products.take(6).each do |product| %>
          <li class="product-card-item-home">
            <%= render partial: 'shared/card', locals: { product: product } %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="image-container">
    <img src="https://images.unsplash.com/photo-1604073384303-89a7c7af82b6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NjF8fGdyZW5pZXIlMjBib2l0ZXxlbnwwfHwwfHx8MA%3D%3D&auto=format&fit=crop&w=900&q=60" alt="Image 1" class="image1">
    <img src="https://images.unsplash.com/photo-1670800870981-0b0513676469?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MjgwfHx2aWRlJTIwZ3JlbmllcnxlbnwwfHwwfHx8MA%3D%3D&auto=format&fit=crop&w=900&q=60" alt="Image 2" class="image2">
  </div>

  <div class="row">
    <div class="col-lg-6">
      <div class="title-home-fav long-vogues">
        <div class="fav-tit">
          <h2 class="title-home">Les plus en vogue</h2>
        </div>
        <div class="pop-up-fav">
          <span class="popup" data-popuptext="Produits les plus vendus!"><i class="fa-solid fa-circle-exclamation hover-icon" style="color: #7a7a7a;"></i></span>
        </div>
      </div>
      <ul class="product-cards-home">
        <% @random_products.take(6).each do |product| %>
          <li class="product-card-item-home">
            <%= render partial: 'shared/card', locals: { product: product } %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

</div>
